<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Your Games</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="your-games-body">
        <div class="your-games-header">
            <h1>Your Games</h1>
            <a class="add-game-link" href="/users/<%=user._id%>/games/new">Add a Game</a>
        </div>
        <ul>
            <% games.forEach((game) => { %>
            <li><a href="/users/<%= user._id %>/games/<%= game._id %>">
                <%= game.name %> on the <%= game.console %>
                </a>
            </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>